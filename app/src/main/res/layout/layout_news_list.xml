<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/post_image"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
    <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chevron_right_black"
            android:id="@+id/next_icon"
            android:contentDescription="Next Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/next_icon"
            android:layout_toEndOf="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp"
                android:id="@+id/post_title"
                android:ellipsize="end"
                android:textStyle="bold"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/post_title"
                android:text=""
                android:textColor="@color/colorTextSecondary"
                android:textSize="16sp"
                android:id="@+id/post_author"
                android:ellipsize="end"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_below="@+id/post_author"
                android:text=""
                android:maxLength="30"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:id="@+id/post_type"
                android:ellipsize="end"
                android:lines="1"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_date_range_black"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/post_author"
                android:text=""
                android:maxLength="30"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:id="@+id/post_date"
                android:ellipsize="end"
                android:lines="1"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>